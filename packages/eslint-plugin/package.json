{
  "name": "eslint-plugin-custom-element",
  "version": "1.1.0",
  "description": "This plugin creates rules specific for validating custom element implementation in HTML",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "type": "module",
  "exports": {
    ".": {
      "require": "./dist/index.cjs",
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "index.js",
    "index.d.ts",
    "types.d.ts",
    "/dist"
  ],
  "scripts": {
    "build": "tsup src/index.ts --dts --format cjs,esm",
    "demo": "cd demo && npx http-server --cors",
    "deploy": "npm run build && npm publish",
    "test": "vitest --run"
  },
  "devDependencies": {
    "@types/eslint": "^8.56.10",
    "eslint": "^9.3.0",
    "tsup": "^8.0.2"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/break-stuff/cem-tools.git"
  },
  "author": "",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/break-stuff/cem-tools/issues"
  },
  "homepage": "https://github.com/break-stuff/cem-tools/tree/main/packages/eslint-plugin#readme",
  "keywords": [
    "web components",
    "custom elements",
    "eslint",
    "plugin",
    "web components eslint",
    "web components lint",
    "custom elements eslint",
    "web components eslint",
    "custom elements lint",
    "web components validation",
    "custom elements validation"
  ]
}
